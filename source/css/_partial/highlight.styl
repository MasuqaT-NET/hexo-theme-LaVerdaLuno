/**
 * Complex Harmony -fy
 * Unit: [deg]
 *  -90(270) ->-desaturate-> 90 ->-saturate-> 270
 *  -60(300) ->-lighten---> 120 ->-darken---> 300
 */
chfy(rot)
  rot = unit(rot, '') % 360

  min-s = 40 // @  90deg
  max-s = 80 // @ 270deg
  steep-s = (max-s - min-s) / 180 // deg
  s = 0
  if 0 <= rot and rot < 90
    s = (90 - rot) * steep-s + min-s
  else if 90 <= rot and rot < 270
    s = min-s + (rot - 90) * steep-s
  else // 270 <= rot and rot < 360
    s = max-s - (rot - 270) * steep-s

  min-l = 60 // @ 300deg
  max-l = 70 // @ 120deg
  steep-l = (max-l - min-l) / 180 // deg
  l = 0
  if 0 <= rot and rot < 120
    l = -(120 - rot) * steep-l + max-l
  else if 120 <= rot and rot < 300
    l = max-l - (rot - 120) * steep-l
  else // 270 <= rot and rot < 360
    l = min-l + (rot - 300) * steep-l

  hsl(rot, s, l)

highlight-background = hsl(hue(color-pallet-accent), 25, 20)
highlight-current-line = hsl(hue(color-pallet-accent), 18, 22)
highlight-selection = hsl(hue(color-pallet-accent), 10, 30)
highlight-foreground = hsl(0deg, 0, 75)
highlight-foreground-dim = darken(highlight-foreground, 20%)
highlight-comment = hsl(0deg, 0, 50)
highlight-red = chfy(358deg)
highlight-orange = chfy(21deg)
highlight-brown = chfy(37deg)
highlight-yellow = chfy(40deg)
highlight-green = chfy(120deg)
highlight-aqua = chfy(180deg)
highlight-blue = chfy(210deg)
highlight-purple = chfy(300deg)

$code-block
  background: highlight-background
  margin: 0 article-padding * -1
  color: highlight-foreground
  line-height: font-size * line-height

$line-numbers
  color: highlight-comment
  font-size: 0.85em

$scrollbar
  &::-webkit-scrollbar
    height: 10px
    background: inherit
  &::-webkit-scrollbar-thumb
    background: alpha(lighten(highlight-background, 50%), 0.4)
  &:hover::-webkit-scrollbar-thumb
    background: alpha(lighten(highlight-background, 50%), 0.6)

.article-entry
  pre, code, .highlight figcaption
    font-family: font-mono
    letter-spacing: 0
  code
    background: lighten(color-pallet-gray, 70%)
    padding: 0 0.3em
    color: darken(color-pallet-sub, 25%)
  pre
    @extend $code-block
    padding: 15px article-padding - 5
    code
      background: none
      text-shadow: none
      padding: 0
  & > pre
    @extend $scrollbar
    overflow: overlay
  .highlight
    @extend $code-block
    padding: 15px 0 0
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      table-layout: fixed
    td
      border: none
      padding: 0 0 15px
    figcaption
      clearfix()
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin: 0 15px 1em
      a
        float: right
    .gutter
      width: 48px // 4 digits
      pre
        @extend $line-numbers
        text-align: right
      .line
        padding-right: 10px
        width: 48px // 4 digits
        box-sizing: border-box
        &.marked
          color: highlight-foreground
    .line
      height: font-size * line-height
      display: block
      width: 100%
    td.code
      @extend $scrollbar
      overflow: overlay
      padding-left: 5px
      .line.marked
        background: highlight-selection
      &:first-child
        padding-left: 20px
    &.diff
      padding-bottom: 0
      table
        td.code:first-child // diff with no line number
          padding: 3px 0
          border-color: darken(highlight-background, 30%)
          border-style: solid
          border-width: (font-size * line-height - 6) 0
          .line
            padding-left: 10px
            &:empty
              background-color: darken(highlight-background, 30%)
              margin-top: 3px
              margin-bottom: 3px
              height: font-size * line-height - 6px
    br
      display: none
    & + .highlight
      margin-top: 5px
    &.pre-omit-line
      border-bottom: 0
      margin-bottom: 0
    &.omit-line
      height: font-size + 10
      border-top: 0
      border-bottom: 0
      padding-top: article-padding - 13 - 1 // strange...
      padding-bottom: article-padding - 13
      margin-top: 0
      margin-bottom: 0
      & > table
        height: font-size + 10
      td.gutter
        .line
          opacity: 0
      td
        padding-bottom: 0
    &.post-omit-line
      border-top: 0
      margin-top: 0
  .gist
    margin: 0 article-padding * -1
    background: highlight-background
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0
        padding: 0
        border: none
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline

