#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  background: lighten(color-pallet-main, 60%)
  padding: 15px
  font-family: font-sans
  a
    color: color-link
    text-decoration: none
    text-shadow: link-shadow
    &:hover
      text-decoration: underline
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc