.article
  & + &
    margin: block-margin 0 0

.article-inner
  @extend $block
  background-image: none
  overflow: hidden

//region Article Header
.article-header
  margin: article-padding article-padding 0
  border-bottom: 2px solid color-separator

.article-title
  text-decoration: none
  font-size: 2em
  font-weight: bold
  color: color-pallet-content
  line-height: line-height-title
  transition: color 0.2s
  a&:hover
    color: color-link

.article-meta
  clearfix()
  margin: 1em 0
  font-size: 0.85em
  line-height: line-height
  div, ul, li
    line-height: 0
  a
    line-height: 1em

.article-date
  @extend $block-caption
  float: left
  margin: 0
  &:hover
    color: color-link

.article-category
  float: left
  margin-left: 1em

.article-category-link
  @extend $block-caption
  margin: 0
  &:hover
    color: color-link

.article-share-link
  @extend $block-caption
  cursor: pointer
  float: right
  margin-left: 20px
  margin-bottom: 0
  &:hover
    color: color-link
  &:before
    content: "\f064"
    font-family: font-icon
    padding-right: 6px

.article-tag-list-item
  float: left
  &:first-child
    margin-left: 1em
  &:not(:first-child)
    margin-left: 0.5em

.article-tag-list-link
  @extend $block-caption
  margin: 0
  letter-spacing: 0.5px
  &:hover
    color: color-link
  &:before
    content: "#"

.article-comment-link
  @extend $block-caption
  float: right
  &:before
    content: "\f075"
    font-family: font-icon
    padding-right: 8px

//endregion Article Header

#more
  display: block
  border-bottom: 2px dashed color-separator
  margin-top: line-height
  width: 100%
  & + *:first-child
    margin-top: line-height
  & + h1:first-child, & + h2:first-child, & + h3:first-child, & + h4:first-child, & + h5:first-child, & + h6:first-child
    margin-top: line-height-title

.article-entry
  @extend $base-style
  clearfix()
  color: color-pallet-content
  padding: 0 article-padding
  p, table
    line-height: line-height
    margin: line-height 0
  h1, h2, h3, h4, h5, h6
    font-weight: bold
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: line-height-title 0
  a
    color: color-link
    text-decoration: none
    text-shadow: link-shadow
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid color-border
    padding: 10px 0
  blockquote
    font-family: font-serif
    font-size: 1.4em
    margin: line-height 20px
    text-align: center
    header
      & > h1
        font-size: 1.8em
        display: inline-block
        margin: 0
      & > p
        display: inline-block
        margin: 0 8px
    & > div
      margin: 0
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-ui-content
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100) % // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0
  & > *:first-child
    margin-top: line-height
  & > h1:first-child, & > h2:first-child, & > h3:first-child, & > h4:first-child, & > h5:first-child, & > h6:first-child
    margin-top: line-height-title
  & > *:last-child
    margin-bottom: line-height
  & > h1:last-child, & > h2:last-child, & > h3:last-child, & > h4:last-child, & > h5:last-child, & > h6:last-child
    margin-bottom: line-height-title
  span.muted
    opacity: 0.5
  & > span.muted
    display: block
  [class^="collection"]
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    align-items: center
  .collection2
    & > div
      @media mq-normal
        margin: 5px
        flex-basis: 300px
        flex-grow: 1
        flex-shrink: 0
  .cf
    &:after
      content: ""
      display: block
      clear: both
    .left
      float: left
      margin-right: 10px
    .right
      float: right
      margin-left: 10px
  .advent-calender
    clearfix()
    margin: line-height 0
    padding: 5px
    background: lighten(color-pallet-sub, 75%)
    header
      text-align: center
      font-size: 1.1em
      margin-bottom: 5px
      .day
        margin-left: 0.5em
    .yesterday
      float: left
      display: inline-block
      .day
        margin-right: 0.5em
    .tomorrow
      float: right
      display: inline-block
      .day
        margin-right: 0.5em
  iframe.slideshare
    border: 1px solid #CCC
    margin-bottom: 5px
    max-width: 100%
  .fancybox-tag.medium > a > img
    max-width: 400px
    max-height: 400px
    @media (max-width 482px) // 82px on total margin
      max-width: 100%
  .fancybox-tag.logo > a > img
    max-width: 100px
    max-height: 100px
    @media (max-width 482px) // 82px on total margin
      max-width: 100%

.article-more-link a
  @extend $depth-block
  display: inline-block
  font-family: font-ui
  line-height: 1em
  padding: 6px 15px
  background: lighten(color-pallet-gray, 70%)
  color: color-ui-content
  text-decoration: none
  text-shadow: none
  &:hover
    background: color-link
    color: color-pallet-background
    text-decoration: none

#article-nav
  clearfix()
  position: relative
  margin: block-margin 0 0
  @media mq-normal
    display: grid
    grid-template-columns: 1fr 1fr
    column-gap block-margin
    &:before
      absolute-center(8px)
      content: ""
      border-radius: 50%
      background: color-pallet-gray
      box-shadow: 0 1px 2px white

.article-nav-link-wrap
  @extend $block
  display: block
  text-decoration: none
  color: color-ui-content
  box-sizing: border-box
  text-align: center
  opacity: 0.9
  padding: 10px
  &:hover
    opacity: 1.0
  & + &
    margin-top: (block-margin / 2)
  @media mq-normal
    margin-top: 0 !important
    height: 90px

#article-nav-newer
  @media mq-normal
    grid-column-start: 1;
    text-align: right

#article-nav-older
  @media mq-normal
    grid-column-start: 2;
    text-align: left

.article-nav-caption
  letter-spacing: 2px
  color: color-ui-content
  line-height: 0.85em
  font-family: font-ui
  #article-nav-newer &
    margin-right: -2px

.article-nav-title
  font-size: 0.85em
  line-height: line-height
  margin-top: 0.5em
  color: lighten(color-ui-content, 20%)

.article-nav-link-wrap:hover
  .article-nav-caption
  .article-nav-title
    color: color-link

.article-share-box
  position: absolute
  display: none
  background: color-pallet-background
  box-shadow: depth-box-2
  border-radius: 3px
  margin-left: -145px
  overflow: hidden
  z-index: 1
  &.on
    display: block

.article-share-input
  width: 100%
  background: none
  box-sizing: border-box
  font: 14px font-sans
  padding: 0 15px
  color: color-pallet-content
  outline: none
  border: 1px solid color-pallet-background
  border-radius: 3px 3px 0 0
  height: 36px
  line-height: 36px

.article-share-links
  clearfix()
  background: lighten(color-pallet-main, 50%)

$article-share-link
  width: 50px
  height: 36px
  display: block
  float: left
  position: relative
  color: color-pallet-gray
  text-shadow: 0 1px white
  &:before
    font-size: 20px
    font-family: font-icon
    absolute-center(@font-size)
    text-align: center
  &:hover
    color: color-pallet-background

.article-share-twitter
  @extend $article-share-link
  &:before
    content: "\f099"
  &:hover
    background: color-twitter
    text-shadow: 0 1px darken(color-twitter, 20%)

.article-share-pocket
  @extend $article-share-link
  &:before
    content: "\f265"
  &:hover
    background: color-pocket
    text-shadow: 0 1px darken(color-pocket, 20%)

.article-share-hatena
  @extend $article-share-link
  &:before
    content: "B!"
    font-family: Verdana
    font-weight: bold
    line-height: 1em
    margin-top: -11px
    margin-left: -12px
  &:hover
    background: color-hatena
    text-shadow: 0 1px darken(color-hatena, 20%)

.article-share-feedly
  @extend $article-share-link
  &:before
    content: "\f143"
  &:hover
    background: color-feedly
    text-shadow: 0 1px darken(color-feedly, 20%)

.article-gallery
  background: black
  position: relative

.article-gallery-photos
  position: relative
  overflow: hidden

.article-gallery-img
  display: none
  max-width: 100%
  &:first-child
    display: block
  &.loaded
    position: absolute
    display: block
  img
    display: block
    max-width: 100%
    margin: 0 auto

//region Article kind
.article-kind-status .article-inner
  background-image: url(lined-url)
  background-size: 450px
  background-position: 0 0
  .article-entry
    background-color: rgba(lighten(color-pallet-main, 75%), 40%)

.article-kind-aside .article-inner
  background-image: url(graph-url)
  background-size: 200px
  background-position: 100px 100px
  .article-entry
    background-color: rgba(lighten(color-pallet-main, 75%), 60%)

//endregion Article kind

