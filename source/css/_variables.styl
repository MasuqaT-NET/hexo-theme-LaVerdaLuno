// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Color pallet
color-pallet-background = #f7f4ef
color-pallet-content = #2f4351
color-pallet-main = #aa936f
color-pallet-sub = #c65d57
color-pallet-accent = #189bf2
color-pallet-gray = #727a7f

// Colors
color-separator = lighten(color-pallet-gray, 60%)
color-border = lighten(color-pallet-gray, 50%)
color-ui-content = lighten(color-pallet-content, 25%)
color-link = color-pallet-accent
color-page-background = color-pallet-main
color-mix-bg-gray = #B4B7B7 // mix(color-pallet-background, color-pallet-gray)
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

font-size = 14px
line-height = 1.6em
line-height-title = 1.1em

// Header
logo-size = 60px
subtitle-size = 16px

// Textures
sandpaper-url = "images/sandpaper.png"
cubes-url = "images/cubes.png"
lined-url = "images/lined-paper.png"
graph-url = "images/graphy.png"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 4

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"

// for Depth
depth-box = 0 1px 2px 0 rgba(0, 0, 0, 0.25)
depth-box-2 = 0 1px 2px 0 rgba(0, 0, 0, 0.5)
depth-text = 0 1px 2px rgba(0, 0, 0, 0.25)

link-shadow = 0 1px 3px rgba(color-link, 15%)