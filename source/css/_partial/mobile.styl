@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-pallet-content
    border-right: 1px solid #fff

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-mix-bg-gray
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    &:hover
      color: color-pallet-background
