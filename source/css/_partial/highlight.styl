    .attr
      color: highlight-purple
    .literal
      color: highlight-orange
    .built_in
      color: highlight-orange
    .built_in-extra
      color: highlight-purple
      font-style: oblique
    .regexp
      color: highlight-green
    .react_hook
      color: highlight-yellow
    .function_title
      color: highlight-yellow
    .separator
      color: highlight-orange
  .rust &
    .built_in
      color: highlight-orange
    .macro
      color: highlight-aqua
  .csharp &
    .literal
      color: highlight-orange
  .xml &, .javascript & .xml, .typescript & .xml
    .xml-def-keyword
      color: highlight-yellow
    .tag
      color: highlight-yellow
      .attr
        color: highlight-foreground
      .name > .ns
      .attr > .ns
      .attr > .xmlns-name
        color: highlight-purple
    .meta
      .meta-string
        color: highlight-green
        a.vglnk
          color: highlight-green
    .string
      a.vglnk
        color: highlight-green
  .diff &
    .addition
      color: highlight-green
    .deletion
      color: highlight-red
  .css &
    .selector-class
      color: highlight-yellow
    .selector-tag
      color: highlight-orange
    .attribute
      color: highlight-foreground
  .markdown &
    .section
      color: highlight-purple
    .code
      color: highlight-foreground-dim
  .html &
    .tag
      color: highlight-yellow
      .attr
        color: highlight-foreground
      .eq
        color: highlight-green
  .css &, .scss &
    .built_in
      color: highlight-yellow
    .selector-pseudo, .selector-tag, .selector-attr
      color: highlight-yellow
    .comment
      color: highlight-brown
  .yaml &
    .attr
      color: highlight-orange
    .quoted-string
      color: highlight-green
    .string
      color: highlight-foreground

