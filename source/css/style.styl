@import "nib"
@import "_variables"
@import "_font"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff2?v=" + font-icon-version) format("woff2"),
       url(font-icon-path + ".woff?v=" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg?v=" + font-icon-version + "#fontawesomeregular") format("svg")

html, body, #container
  height: 100%

body
  background: url(sandpaper-url) color-page-background
  font: font-size font-sans
  letter-spacing: 0.5px
  -webkit-text-size-adjust: 100%
  overflow: overlay
  &::-webkit-scrollbar
    background: transparent
    width: 10px
  &::-webkit-scrollbar-thumb
    background: alpha(color-pallet-content, 0.4)
    border-radius: 2px
  &:hover::-webkit-scrollbar-thumb
    background: alpha(color-pallet-content, 0.6)

// couldn't merge these. bug on browser?
::selection
  background: color-pallet-accent
  color: color-pallet-background

::-moz-selection
  background: color-pallet-accent
  color: color-pallet-background

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative


.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: url(sandpaper-url) color-page-background
  .mobile-nav-on &
    left: mobile-nav-width

#layout
  display: flex
  padding: block-margin (gutter-width / 2)
  margin: 0 auto
  flex-wrap: wrap
  justify-content: center
  max-width: layout-width

#main
  width: content-max-width
  max-width: content-max-width
  padding: 0 (gutter-width / 2)

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"
@import "_partial/inline-svg"
@import "_fancybox"

if sidebar
  @import "_partial/sidebar"
